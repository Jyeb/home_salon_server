{
  "name": "mernapp",
  "version": "1.0.0",
  "description": "home_salon application built using the MERN stack",
  "main": "server.js",
  "scripts": {
    "test": "mocha || true",
    "start": "node server.js",
    "server": "nodemon server.js",
    "home_salon_client": "npm install --prefix home_salon_client",
    "dev": "concurrently \"npm run server\" \"npm run home_salon_client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix home_salon_client && npm run build --prefix home_salon_client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jyeb/home_salon_server.git"
  },
  "author": "Jye Bussa, Sara Cave & Phil Harper",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Jyeb/home_salon_server/issues"
  },
  "homepage": "https://github.com/Jyeb/home_salon_server#readme",
  "dependencies": {
    "@material-ui/core": "^4.9.0",
    "bcryptjs": "^2.4.3",
    "bootstrap": "^4.4.1",
    "config": "^3.2.5",
    "express": "^4.17.1",
    "express-validator": "^6.3.1",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.9",
    "react-bootstrap": "^1.0.0-beta.16",
    "react-transition-group": "^4.3.0",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "concurrently": "^5.0.2",
    "mocha": "^7.0.1",
    "nodemon": "^2.0.2"
  }
}
